<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_list_tile_native_ad_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    tools:background="#EDEDED" />


                <RelativeLayout
                    android:id="@+id/mainrl"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_list_tile_native_ad_icon"
                    >

                    <TextView
                        android:id="@+id/tv_list_tile_native_ad_attribution_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rounded"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:text="Ad"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />


                    <TextView
                        android:id="@+id/tv_list_tile_native_ad_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:paddingLeft="5dp"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:layout_toRightOf="@+id/tv_list_tile_native_ad_attribution_small"
                        android:textSize="12sp"
                        tools:text="Headline" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainrl"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/iv_list_tile_native_ad_icon"
                    >

                    <TextView
                        android:id="@+id/tv_list_tile_native_ad_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="#828282"
                        android:textSize="12sp"
                        tools:text="body"
                        android:layout_marginRight="80dp"/>
                </RelativeLayout>


            </RelativeLayout>

            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/flutter_native_ad_media"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="end"
                android:paddingTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/open_btn"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_rounded_new"
                    android:minWidth="40dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:text="OPEN"
                    android:textColor="#000000"
                    android:textSize="15dp" />
                <View
                    android:layout_width="35dp"
                    android:layout_height="1dp"
                    />
            </LinearLayout>
        </LinearLayout>



    </FrameLayout>

</com.google.android.gms.ads.nativead.NativeAdView>